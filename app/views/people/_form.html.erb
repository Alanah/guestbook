<%= form_for(@person) do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, 'Full Name:' %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :secret, 'Password:' %><br />
    <%= f.password_field :secret %>
  </div>
  <div class="field">
<% nations = { 'United States of America' => 'USA', 'Canada' => 'Canada', 'Mexico' => 'Mexico', 'United Kingdom' => 'UK' }%>

<%= button_select(:person, :country, nations) %>

  </div>
  <div class="field">
    <%= f.label :email, 'E-mail:' %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :description, 'Description:' %><br />
    <%= text_area :person, :description, :cols => 30, :rows => 10 %>
  </div>
  <div class="field">
    <%= f.label :can_send_email %>
    <%= f.check_box :can_send_email, {:class => 'email', :checked => "checked"} %>
  </div>
  <div class="field">
    <%= f.label :graduation_year %><br />
    <%= f.number_field :graduation_year %>
    <%= f.hidden_field :graduation_year %>
  </div>
  <div class="field">
    <%= f.label :body_temperature %><br />
    <%= f.text_field :body_temperature %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :birthday %><br />
    <%= f.date_select :birthday %>
  </div>
  <div class="field">
    <%= f.label :favorite_time %><br />
    <%= f.time_select :favorite_time %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
